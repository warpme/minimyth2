#!/bin/sh
################################################################################
# browsers
################################################################################
. /etc/rc.d/functions

start() {

    mm_directory_restore_from_confrw "/home/minimyth/.local/share/mythfrontend/QtWebEngine/MythTV" "mythtv-webengine-config"
    /bin/chown -R minimyth:minimyth /home/minimyth/.local/share/mythfrontend/QtWebEngine/MythTV

    if [ "x${MM_NETFLIX_ENABLED}" = "xyes" ] ; then

        mm_directory_restore_from_confrw "/home/minimyth/.config/google-chrome" "google-chrome-config"
        /bin/chown -R minimyth:minimyth /home/minimyth/.config/google-chrome

        mm_directory_restore_from_confrw "/home/minimyth/.mozilla" "mozilla-firefox-config"
        /bin/chown -R minimyth:minimyth /home/minimyth/.mozilla

    fi

    this_script_done
}

stop() {

    return 0
}

case $1 in
    start) start ;;
    stop)  stop  ;;
esac
