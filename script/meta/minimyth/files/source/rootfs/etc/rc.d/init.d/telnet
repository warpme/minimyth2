#!/bin/sh
################################################################################
# telnet
################################################################################
. /etc/rc.d/functions

start() {

    if [ "x${MM_SSH_SERVER_ENABLED}" = "xyes" ] ; then

        if [ ! -n "`/bin/pidof telnetd`" ] ; then

            /usr/sbin/telnetd
        fi
    fi

    this_script_done
}

stop() {

    if [ -n "`/bin/pidof telnetd`" ] ; then
        mm_message_output info "stopping telnet server ..."
        /usr/bin/killall telnetd
    fi

    return 0
}

case $1 in
    start) start ;;
    stop)  stop  ;;
esac
