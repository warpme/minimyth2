#!/bin/sh

fan_speeds="32 64 128 192 255 192 128 64 32 0"

sysfs_fan=`find /sys/devices/platform/*/hwmon -name pwm[0-9]`

while true ; do
    for fan in ${sysfs_fan} ; do 
        echo "controlling [${fan}]"
        for speed in ${fan_speeds} ; do
            echo ${speed} > ${fan}
            cat ${fan}
            sleep 2
        done
        sleep 3
    done
done
