#!/bin/sh
################################################################################
# codecs
#
# This script installs binary codecs for mplayer and xine.
################################################################################
. /etc/rc.d/functions

start() {
    mm_message_output info "installing binary codecs ..."

    if /usr/bin/test -n "${MM_CODECS_URL}" ; then
        mm_url_mount "${MM_CODECS_URL}" "/usr/lib/codecs"
    fi

    return 0
}

stop() {
    return 0
}

case $1 in
    start) start ;;
    stop)  stop  ;;
esac

exit 0
