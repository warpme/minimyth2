#!/bin/sh

. /etc/rc.d/functions

/usr/bin/avahi-publish -s "${MM_HW_DEVICE_NAME}@${MM_LOCAL_IP_ADDRESS}: SSH" _ssh._tcp 22 "u=root"

#<?xml version="1.0" standalone='no'?><!--*-nxml-*-->
#<!DOCTYPE service-group SYSTEM "avahi-service.dtd">
#
#<service-group>
#  <name replace-wildcards="yes">%h: SSH</name>
#  <service>
#    <type>_ssh._tcp</type>
#    <port>22</port>
#    <txt-record>u=root</txt-record>
#  </service>
#</service-group>
