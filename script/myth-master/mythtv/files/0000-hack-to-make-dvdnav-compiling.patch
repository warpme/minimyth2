by some reason compiling with system dvdcss.h fails so force to use build-in dvdcss.h

diff --speed-large-files --no-dereference --minimal -Naur mythtv-2139eab80ec9d646836c71a32f05adde74ba7cf1/mythtv/configure mythtv-2139eab80ec9d646836c71a32f05adde74ba7cf1/mythtv/configure
--- mythtv-2139eab80ec9d646836c71a32f05adde74ba7cf1/mythtv/configure	2025-12-04 11:24:14.340033387 +0100
+++ mythtv-2139eab80ec9d646836c71a32f05adde74ba7cf1/mythtv/configure	2025-12-04 11:30:29.023376732 +0100
@@ -5209,7 +5209,7 @@
 # libdvdcss
 if $(pkg-config --atleast-version="1.2" libdvdcss); then
     use_pkg_config libdvdcss libdvdcss dvdcss/dvdcss.h dvdcss_open &&
-        enable dvdcss_dvdcss_h
+        disable dvdcss_dvdcss_h
 fi
 
 # libudfread
diff --speed-large-files --no-dereference --minimal -Naur mythtv-2139eab80ec9d646836c71a32f05adde74ba7cf1/mythtv/external/libmythdvdnav/config.h.in mythtv-2139eab80ec9d646836c71a32f05adde74ba7cf1/mythtv/external/libmythdvdnav/config.h.in
--- mythtv-2139eab80ec9d646836c71a32f05adde74ba7cf1/mythtv/external/libmythdvdnav/config.h.in	2025-12-04 06:15:49.000000000 +0100
+++ mythtv-2139eab80ec9d646836c71a32f05adde74ba7cf1/mythtv/external/libmythdvdnav/config.h.in	2025-12-04 11:23:14.866698462 +0100
@@ -9,7 +9,7 @@
 // libdvdread
 #cmakedefine HAVE_DLFCN_H
 #cmakedefine HAVE_SYS_PARAM_H
-#cmakedefine HAVE_DVDCSS_DVDCSS_H
+//#cmakedefine HAVE_DVDCSS_DVDCSS_H
 
 #if defined(__GNUC__)
 # define UNUSED     __attribute__((unused))
