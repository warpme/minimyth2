#!/bin/sh

. /etc/rc.d/functions

/usr/bin/avahi-publish -s "${MM_HW_DEVICE_NAME}@${MM_LOCAL_IP_ADDRESS}: Main Page" _http._tcp 80 "/"

#<?xml version="1.0" standalone='no'?><!--*-nxml-*-->
#<!DOCTYPE service-group SYSTEM "avahi-service.dtd">
#
#<service-group>
#  <name replace-wildcards="yes">%h: Main Page</name>
#  <service>
#    <type>_http._tcp</type>
#    <port>80</port>
#  </service>
#</service-group>
